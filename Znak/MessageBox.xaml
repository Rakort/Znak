<Window x:Class="Znak.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Znak"
        mc:Ignorable="d"
        Title="MessageBox" Height="200" Width="400" WindowStartupLocation="CenterScreen" Icon="/Error.png">
    <Grid x:Name="Grid_MessageBox" Height="171" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
        <Image HorizontalAlignment="Center" VerticalAlignment="Top" Width="135" Source="/Error.png" Opacity="0.2"/>
        <TextBlock x:Name="TB_MessageBox" Margin="10,52,10,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" TextAlignment="Center" FontSize="14"/>
        <Button x:Name="BT_MessageBoxClose" Content="OK" Margin="0,0,0,10" FontSize="14" HorizontalAlignment="Center" Width="76" Height="29" VerticalAlignment="Bottom" Click="BT_MessageBoxClose_Click"/>
    </Grid>
</Window>
